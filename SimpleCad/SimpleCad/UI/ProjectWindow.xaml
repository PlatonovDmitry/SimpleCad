<Window x:Class="SimpleCad.UI.ProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:SimpleCad.UI"
        xmlns:geometry="clr-namespace:SimpleCad.UI.Geometry"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        d:DataContext="{d:DesignInstance ui:ProjectVm}"
        x:ClassModifier="internal"
        x:Name="Root">

    <DockPanel>
        <DockPanel DockPanel.Dock="Left">
            <Button
                Content="Line"
                Command="{Binding Path=AddLineCommand}"
                DockPanel.Dock="Top"
                Margin="5" />

            <Button
                Content="Circle"
                Command="{Binding Path=AddCircleCommand}"
                DockPanel.Dock="Top"
                Margin="5" />

            <Button
                Content="Rectangle"
                Command="{Binding Path=AddRectangleCommand}"
                DockPanel.Dock="Top"
                Margin="5" />

            <StackPanel />
        </DockPanel>

        <ui:CanvasControl />

    </DockPanel>
</Window>